<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
	 PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
	 "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.kitri.project.adExercise.AdExerciseDao">

	<resultMap id="AdExerciseResult" type="com.kitri.project.adExercise.AdExercise">
		<result column="num" property="num" />
		<result column="f_level" property="f_level" />
		<result column="title" property="title" />
		<result column="w_date" property="w_date" />
		<result column="contents" property="contents" />
		<result column="w_check" property="w_check" />
	</resultMap>

	<insert id="insert" parameterType="com.kitri.project.adExercise.AdExercise">
		insert into workout values(seq_workout_num.nextval, #{f_level}, #{title}, sysdate, #{contents}, 'N')
	</insert>
	
	<select id="select" parameterType="int" resultMap="AdExerciseResult">
		select * from workout where f_level = #{f_level}
	</select>
	
	<select id="selectAll" resultMap="AdExerciseResult">
		select * from workout
	</select>
	
	<select id="selectAdExercise" parameterType="int" resultMap="AdExerciseResult">
		select * from workout where num = #{num}
	</select>
	
	<update id="update" parameterType="com.kitri.project.adExercise.AdExercise">
		update workout set title= #{title}, contents=#{contents}, w_check='Y' where num = #{num}
	</update>
	
	<delete id="deleteAdExercise" parameterType="int">
		delete workout where num = #{num}
	</delete>

</mapper>